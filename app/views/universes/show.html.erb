<div class="container mt-5">
  <div class="t-main-card">
    <div class="t-card-universe">
      <%= image_tag('teste.jpg', class: "universe-image") %>
      <h1 class="t-card-universe-title"><%= @universe.title %></h1>
      <h3 class="t-card-universe-title"><%= @universe.callout %></h3>
      <p class="t-card-universe-content"><%= @universe.content %></p>
    </div>
  </div>
</div>


<p><%= @universe.content %></p>

<% @universe.stories.each do |story| %>
  <div class="t-card-universe container">

    <div>
      <%= image_tag "teste.png", class:"story-img" %>
    </div>

    <div class="t-card-universe-content">

      <div>
      <h3><%= story.title %></h3>
      <p><%= story.callout %></p>
      </div>

      <div class="t-card-universe-details">
        <span class="sticker-tag">Mistery</span>
        <span><%= story.reading_time %> minutes</span>
      </div>

    </div>

  </div>
<% end %>
