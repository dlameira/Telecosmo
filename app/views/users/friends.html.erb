<div class="container m-3">
  <% @friendships.each do |f|  %>
    <div class="row justify-content-center mb-2">
      <% if @user == f.asker %>
        <%=link_to(user_path(f.receiver)) do%>
          <%= f.receiver.nickname%>
        <%end%>

      <%elsif @user == f.receiver %>
        <%=link_to(user_path(f.asker)) do%>
          <%= f.asker.nickname%>
        <%end%>
      <%end%>
    </div>
  <%end%>
</div>
